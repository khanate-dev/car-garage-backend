{
	"name": "car-garage-backend",
	"version": "1.0.0",
	"main": "build/src/app.js",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register --require dotenv/config src/app.ts",
		"build": "rimraf ./build && tsc",
		"start": "node --require tsconfig-paths/register build/src/app.js",
		"lint": "eslint .",
		"test": "jest --runInBand",
		"env:login": "dotenv-vault login -y",
		"env:push": "dotenv-vault push",
		"env:pull": "dotenv-vault pull && dotenv-vault pull example .env.example",
		"env:open": "dotenv-vault open -y"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dayjs": "^1.11.5",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"express-pino-logger": "^7.0.0",
		"helmet": "^6.0.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.5.3",
		"pino": "^8.4.2",
		"zod": "^3.18.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/eslint": "^8.4.6",
		"@types/express": "^4.17.13",
		"@types/express-pino-logger": "^4.0.3",
		"@types/jest": "^28.1.8",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/node": "^18.7.11",
		"@typescript-eslint/eslint-plugin": "^5.35.1",
		"@typescript-eslint/parser": "^5.35.1",
		"eslint": "^8.22.0",
		"jest": "^28.1.3",
		"pino-pretty": "^9.1.0",
		"rimraf": "^3.0.2",
		"ts-jest": "^28.0.8",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.1.0",
		"typescript": "^4.7.4"
	}
}
