{
	"name": "car-garage-backend",
	"version": "1.0.0",
	"main": "build/src/app.js",
	"scripts": {
		"start": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register --require dotenv/config src/app.ts",
		"build": "rimraf ./build && tsc",
		"start:production": "node --require tsconfig-paths/register build/src/app.js",
		"lint": "eslint .",
		"test": "jest --runInBand",
		"env:login": "dotenv-vault login -y",
		"env:push": "dotenv-vault push",
		"env:pull": "dotenv-vault pull && dotenv-vault pull example .env.example",
		"env:open": "dotenv-vault open -y"
	},
	"dependencies": {
		"b2-js": "^1.2.4",
		"cors": "^2.8.5",
		"dayjs": "^1.11.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.1",
		"express-pino-logger": "^7.0.0",
		"helmet": "^6.0.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.6.5",
		"pino": "^8.6.1",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/eslint": "^8.4.6",
		"@types/express": "^4.17.14",
		"@types/express-pino-logger": "^4.0.3",
		"@types/jest": "^29.1.1",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/node": "^18.8.2",
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"eslint": "^8.24.0",
		"jest": "^29.1.2",
		"pino-pretty": "^9.1.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^29.0.3",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.1.0",
		"typescript": "^4.8.4"
	},
	"engines": {
		"node": "18.x"
	}
}
